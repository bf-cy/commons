<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>lzy</groupId>
	<artifactId>commons-utils</artifactId>
	<version>${project.version}</version>
	
	<profiles>
		<profile>
			<id>RELEASE</id>
		    <properties>
	 	        <project.version>0.1.0.RELEASE</project.version>
		    </properties>
        </profile>
		<profile>
			<id>SNAPSHOT</id>
		    <properties>
	 	        <project.version>0.1.0.SNAPSHOTS</project.version>
		    </properties>
		    <activation>
	            <!-- 设置当前为默认值 -->
	            <activeByDefault>true</activeByDefault>
	        </activation>
        </profile>
    </profiles>
	<properties>
		<org.apache.commons.commons-lang3>3.8.1</org.apache.commons.commons-lang3>
		<commons-io>2.6</commons-io>
		<javax.servlet.javax.servlet-api>4.0.1</javax.servlet.javax.servlet-api>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>${org.apache.commons.commons-lang3}</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${commons-io}</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>${javax.servlet.javax.servlet-api}</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	
	<distributionManagement>
		<repository>
			<!-- 这里的ID要和setting的id一致 -->
			<id>nexus-releases</id>
			<url>http://192.168.0.10/repository/maven-releases/</url>
		</repository>
		<!--这是打成快照版本的配置 -->
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<url>http://192.168.0.10/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
		
		<resources>
			<resource>
				<directory>src/main/java</directory>
			</resource>
		</resources>
	</build>
	
	
</project>